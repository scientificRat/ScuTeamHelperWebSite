<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PublishPersonalInfoServlet</servlet-name>
        <servlet-class>servlet.PublishPersonalInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublishPersonalInfoServlet</servlet-name>
        <url-pattern>/publishPersonalInfoServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>servlet.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signUpServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PublishNewTeamServlet</servlet-name>
        <servlet-class>servlet.PublishNewTeamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublishNewTeamServlet</servlet-name>
        <url-pattern>/publishNewTeamServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteTeamServlet</servlet-name>
        <servlet-class>servlet.DeleteTeamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTeamServlet</servlet-name>
        <url-pattern>/deleteTeamServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCommentsServlet</servlet-name>
        <servlet-class>servlet.AddCommentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCommentsServlet</servlet-name>
        <url-pattern>/addCommentsServlet</url-pattern>
    </servlet-mapping>

</web-app>